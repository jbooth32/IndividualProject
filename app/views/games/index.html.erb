<!DOCTYPE html>
<html>
<style>
h1{text-align:center;}
th{font-size:25px;}
td{font-size:20px;}
</style>
<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <col width="130">
  <col width="130">
  <col width="120">
  <col width="130">
  <thead>
    <tr>
      <th>Winner</th>
      <th>Loser</th>
      <th>Score</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.winner %></td>
        <td><%= game.loser %></td>
        <td><%= game.w_score.to_s + "-" + game.l_score.to_s %></td>
        <td><%= game.date %></td>
        <td><%= link_to 'Show', game %></td>
        <!--<td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
         -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
